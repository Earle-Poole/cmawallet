{
    "env": {
        "browser": true,
        "es6": true
	},
	"parser": "babel-eslint",
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
		"react/jsx-filename-extension": [
			1, 
			{ "extensions": [
				".js", 
				".jsx"] }
		],
        "indent": [
            2,
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-tabs": [
            0
        ]
    }
}